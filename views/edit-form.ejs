<!DOCTYPE html>
<html>
    <head>
        <%- include("./partials/head.ejs", { title: `Edit ${fly.name}` })%>
        <link rel="stylesheet" href="/styles/fly-form.css">
    </head>
    <body>
        <%- include("./partials/nav.ejs") %>
        <h2>Add A Fly</h2>
        <form method="POST" action="/flies/<%= fly._id %>?_method=PUT">
            <label for="name">Fly Name:</label>
            <input type="text" id="name" name="name" value="<%= fly.name %>" required>
          
            <label for="ingredients">Ingredients:</label>
            <input type="text" id="ingredients" name="ingredients" value="<%= fly.ingredients %>">
          
            <label for="hookSize">Hook Size:</label>
            <select id="hookSize" name="hookSize" required>
                <option value="<%= fly.hookSize %>" selected><%= fly.hookSize %></option>
                <option value="2/0">2/0</option>
                <option value="1/0">1/0</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="4">4</option>
                <option value="6">6</option>
                <option value="8">8</option>
                <option value="10">10</option>
                <option value="12">12</option>
                <option value="14">14</option>
                <option value="16">16</option>
                <option value="18">18</option>
                <option value="20">20</option>
                <option value="22">22</option>
            </select>
          
            <label for="type">Type:</label>
            <select id="type" name="type" required>
                <option value="<%= fly.type %>" selected><%= fly.type %></option>
                <option value="nymph">nymph</option>
                <option value="nymph">nymph</option>
                <option value="soft hackle">soft hackle</option>
                <option value="streamer">streamer</option>
                <option value="emerger">emerger</option>
                <option value="dry">dry</option>
            </select>
         
            <label for="imitating">Imitating:</label>
            <input type="text" id="imitating" name="imitating" value="<%= fly.imitating %>">
          
            <label for="lifeStage">Life Stage:</label>
            <select id="lifeStage" name="lifeStage">
                <option value="<%= fly.lifeStage %>"><%= fly.lifeStage %></option>
                <option value="nymph">nymph</option>
                <option value="emerger">emerger</option>
                <option value="dun">dun</option>
                <option value="adult">adult</option>
                <option value="spinner">spinner</option>
                <option value="cripple">cripple</option>
            </select>

          
            <label for="photo">Photo:</label>
            <input type="text" id="photo" name="photo" value="<%= fly.photo %>">
          
            <label for="quantity">Quantity:</label>
            <input type="number" id="quantity" name="quantity" min="1" step="1" value="<%= fly.quantity %>" required>
          
            <button type="submit">Update Fly</button>
          </form>
          
    </body>
</html>