<!DOCTYPE html>
<html>
    <head>
        <%- include("./partials/head.ejs", { title: 'Fly Bin Home'})%>
        <link rel="stylesheet" href="/styles/home.css">
        <script src="/scripts/inc-dec.js" defer></script>
    </head>
    <body>
        <%- include("./partials/nav.ejs")%>
        <h2 class="page-title">Your Fly Bin</h2>
        <section class="flies-list">
            <% for (let fly of flies) { %>
            <figure class="fly-card">
                <img src="<%=fly.photo%>">
                <figcaption>
                    <h3><%= fly.name %></h3>
                    <div class="nums">
                        <a><b>Quantity:</b> <%= fly.quantity %></a>
                        <a><b>Size:</b> <%= fly.hookSize %></a>
                    </div>

                    <form method="POST" action="/flies/<%= fly._id %>/add?_method=PUT">
                        <button id="add" type="submit" value="Add a Fly">Add a fly</button>
                    </form>

                    <button class="btn">
                        <a class="details" href="/flies/<%= fly._id %>">see details</a>       
                    </button>
                </figcaption>
            </figure>
            <% } %>
        </section>
        <%- include('./partials/footer.ejs') %>
    </body>
</html>